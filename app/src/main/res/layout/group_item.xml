<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_outer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingTop="16dp">


    <TextView
        android:id="@+id/group_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#CC0000"
        android:gravity="center"
        android:text="Hallo"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <Button
        android:id="@+id/addEntry"
        android:layout_width="113dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:text="Add Entry"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/group_name"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/group_name"
        app:layout_constraintTop_toTopOf="@+id/group_name" />

    <TextView
        android:id="@+id/total_remain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/purple_200"
        android:padding="8dp"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/addEntry"
        app:layout_constraintEnd_toEndOf="@+id/group_name"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="@+id/group_name" />


</androidx.constraintlayout.widget.ConstraintLayout>
