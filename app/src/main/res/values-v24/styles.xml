<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar.Discrete">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:max">3</item>
        <item name="android:progress">3</item>
        <item name="android:progressTint">@color/primary_text_color</item>
        <item name="android:tickMark">@color/colorPrimaryVariant</item>
    </style>
</resources>