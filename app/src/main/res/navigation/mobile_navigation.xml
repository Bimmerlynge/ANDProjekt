<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.bimmerlynge.andprojekt.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_groupFragment"
            app:destination="@id/groupFragment" />
        <action
            android:id="@+id/action_navigation_home_to_createGroupFragment"
            app:destination="@id/createGroupFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.bimmerlynge.andprojekt.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_addEntryFragment"
            app:destination="@id/addEntryFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.bimmerlynge.andprojekt.ui.profile.ProfileFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/groupFragment"
        android:name="com.bimmerlynge.andprojekt.ui.home.GroupFragment"
        android:label="group_fragment"
        tools:layout="@layout/group_fragment" >
        <action
            android:id="@+id/action_groupFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/navigation_home" />
    </fragment>
    <fragment
        android:id="@+id/addEntryFragment"
        android:name="com.bimmerlynge.andprojekt.ui.home.AddEntryFragment"
        android:label="AddEntryFragment"
        tools:layout="@layout/add_entry"/>
    <fragment
        android:id="@+id/createGroupFragment"
        android:name="com.bimmerlynge.andprojekt.ui.home.CreateGroupFragment"
        android:label="fragment_create_group"
        tools:layout="@layout/fragment_create_group" />
</navigation>